{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "noImplicitAny": true,
    "pretty": true,
    "sourceMap": true,
    "target": "es6",
    "resolveJsonModule": true,
    "outDir": "./dist"
  },
  "include": [
    "app.ts",
    "server.ts",
    "config/*.ts",
    "models/*.ts",
    "routes/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}